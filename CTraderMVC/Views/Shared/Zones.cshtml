@{
    ViewData["Title"] = "Zones";
}

<div class="text-center">
    <h1 class="display-4">CTrader API</h1>
</div>

@model IEnumerable<CTraderMVC.Models.Zones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model is not null)
{
    <div><b>List of Zones</b><br /></div>
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>ID</th>
            <th> Time Stamp </th>
            <th>Zone Type </th>
            <th>Zone Status </th>
            <th>Actions</th>
        </tr>
        @foreach (var d in Model)
        {
        <tr>
            <td>@d.ID</td>
            <td>@d.TimeS</td>
            <td>@d.ZoneType</td>
            <td>@d.ZoneStatus</td>
            <td>
                <a class="nav-link text-white" id="Action-button" style="background-color:red" asp-area="" asp-controller="ZonesOrders" asp-action="Delete" asp-route-id="@d.ID">Delete</a>
                    <a class="nav-link text-white" id="Action-button" style="background-color:green" asp-area="" asp-controller="ZonesOrders" asp-action="Update" asp-route-id="@d.ID">Edit</a>
            </td>
        </tr>
        }
    </table>
}


@if (Model is null)
{
    <h1>User Not Logged in</h1>
}


