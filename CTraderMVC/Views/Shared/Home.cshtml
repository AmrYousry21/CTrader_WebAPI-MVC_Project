
@{
    ViewData["Title"] = "Home";
}


@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <table style="width:50%;margin-left:auto;margin-right:auto;">
        <tr>
            <td>
                UserName:
            </td>
            <td>
                @Html.TextBox("UserNameInput")
            </td>
        </tr>
        <tr>
            <td>
                Password
            </td>
            <td>
                @Html.Password("UserPasswordInput")
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="login" name="login" />
            </td>
        </tr>
    </table>
   
}